{
  "manifest_version": 3,
  "name": "AU Archive Clipper",
  "version": "2.0.0",
  "description": "Save pages to Abandoned Upstate Archive with zero-detection browser support",

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "contextMenus",
    "sidePanel",
    "scripting",
    "cookies"
  ],

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+A",
        "mac": "Alt+Shift+A"
      },
      "description": "Open AU Archive side panel"
    }
  },

  "host_permissions": [
    "http://localhost:47123/*",
    "ws://localhost:47124/*",
    "<all_urls>"
  ],

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Open AU Archive Panel"
  },

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
