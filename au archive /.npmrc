# Allow build scripts for required packages
enable-pre-post-scripts=true
ignore-scripts=false

# Approve build scripts for native modules (pnpm v10+)
# These packages require native compilation
onlyBuiltDependencies=electron,better-sqlite3,esbuild,sharp,7zip-bin,@electron/rebuild

# Use hoisted node_modules layout for Electron compatibility
# pnpm's default symlinked structure is incompatible with electron-rebuild
# See: https://github.com/pnpm/pnpm/issues/3415
node-linker=hoisted
